{% extends 'admin.html.twig' %}
{% block body %}
    <div class="card">
        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-center">Изменить категорию</h3>
                    </div>
                    <hr>
                    <form action="{{ path('app_admin_category_edit', {id: row.ID}) }}" method="post" novalidate="novalidate">
                        <div class="form-group">
                            <label for="Title" class="control-label mb-1">Название</label>
                            <input id="Title" name="Title" type="text" class="form-control" aria-required="true"
                                   value="{{ row.Name }}">
                        </div>
                        <div class="form-group">
                            <label for="Description" class="control-label mb-1">Описание</label>
                            <input id="Description" name="Description" type="text" class="form-control"
                                   aria-required="true"
                                   aria-invalid="false" value="{{ row.Description }}">
                        </div>
                        <div class="form-group">
                            <label for="Status" class="control-label mb-1">Статус</label>
                            <select name="Status" class="form-control cc-number identified">
                                {% for status, text in Statuses %}
                                    <option {{ status == row.Status ? 'selected' : '' }} value="{{ status }}">{{ text }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div>
                            <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                Сохранить
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}
