{% extends 'admin.html.twig' %}
{% block body %}
    <div class="pb-4 text-right">
        <a href="javascript:void(0)" onclick="if(confirm('Действительно удалить услугу?')) location.href = '{{ path('app_admin_service_delete', {id: row.ID}) }}'" class="btn btn-danger">Удалить</a>
        <a href="{{ path('app_admin_service_edit', {id: row.ID}) }}" class="btn btn-info">Редактировать</a>
    </div>
    <div class="card">
        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-center">Услуга - {{ row.readName }}[{{ row.ID }}]</h3>
                    </div>
                    <hr>
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-3 text-right">Статус:</div>
                            <div class="col-md-6">
                                <span class="badge badge-{{ row.Status == constant('STATUS_ACTIVE', row) ? 'complete' : 'pending' }}">{{ row.getStatusText(row.Status) }}</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">Название:</div>
                            <div class="col-md-6">{{ row.readName }}</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">Категория:</div>
                            <div class="col-md-6">{{ row.Category.Name }}[{{ row.Category.ID }}]</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">Мин. Количество:</div>
                            <div class="col-md-6">{{ row.MinQuantity }}</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">Макс. Количество:</div>
                            <div class="col-md-6">{{ row.MaxQuantity }}</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">Цена(за 1000шт):</div>
                            <div class="col-md-6">{{ row.Price }}</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">Цена реселлеру:</div>
                            <div class="col-md-6">{{ row.ResellerPrice }}</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">Дата создания:</div>
                            <div class="col-md-6">{{ row.СreatedDate.format('Y-m-d H:i:s') }}</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-right">Описание:</div>
                            <div class="col-md-6">
                                {{ row.readDescription|raw }}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

