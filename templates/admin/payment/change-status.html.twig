{% extends 'admin.html.twig' %}
{% block body %}
    <div class="card">
        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-center">{{ row.getTypeText(row.Type) }} #{{ "%06d"|format(row.ID) }}: изменить статус</h3>
                    </div>
                    <hr>
                    <form action="{{ path('app_admin_payment_change_status', {id: row.ID}) }}" method="post">
                        <div class="form-group">
                            <label for="Status" class="control-label mb-1">Статус:*</label>
                            <select name="Status" class="form-control identified">
                                <option value="">- выбрать -</option>
                                {% for Status, Text in row.getStatuses() %}
                                    <option value="{{ Status }}" {{ row.Status == Status ? 'selected' : '' }}>{{ Text }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div>
                            <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                Обновить статус
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}