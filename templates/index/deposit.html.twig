{% extends 'base.html.twig' %}
{% set CategoryID = 0 %}
{% block title %}Пополнение баланса - накрутка Inst-Store{% endblock %}
{% block header %}
    <style>
        .get-button {
            padding: 11px 5px;
        }
        .card {
            background: transparent; border: none;
        }
    </style>
    <!--============= Header Section Starts Here =============-->
    <header class="header-section inner-header">
        <div class="container">
            <div class="header-wrapper">
                <div class="logo">
                    <a href="{{ path('app_index_index') }}">
                        <img src="{{ asset('/assets/images/logo/logo.png') }}" alt="logo">
                    </a>
                </div>
                {{ include('base/header_list_links.html.twig') }}
                <div class="header-bar d-lg-none">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
    </header>
    <!--============= Header Section Ends Here =============-->

    <section class="page-header bg_img oh" data-background="{{ asset('/assets/images/page-header.png') }}">
        <div class="bottom-shape d-none d-md-block">
            <img src="{{ asset('/assets/css/img/page-header.png') }}" alt="css">
        </div>
        <div class="container">
            <div class="page-header-content cl-white">
                <h2 class="title">Пополнение баланса</h2>
                <ul class="breadcrumb">
                    <li>
                        <a href="{{ path('app_index_index') }}">Главная</a>
                    </li>
                    <li>
                        Пополнение баланса
                    </li>
                </ul>
            </div>
        </div>
    </section>
    <!--============= Header Section Ends Here =============-->
{% endblock %}
{% block body %}
<!--============= ScrollToTop Section Starts Here =============-->
<div class="preloader">
    <div class="preloader-inner">
        <div class="preloader-icon">
            <span></span>
            <span></span>
        </div>
    </div>
</div>
<a href="#0" class="scrollToTop"><i class="fas fa-angle-up"></i></a>
<div class="overlay"></div>
<!--============= ScrollToTop Section Ends Here =============-->
<!--============= Blog Section Starts Here =============-->
<section class="blog-section padding-top padding-bottom" style="min-height: 550px">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                    <label for="PaymentType">Тип оплаты:*</label>
                    <select id="PaymentType" class="form-control">
                        <option value="">выбрать</option>
                        <option value="card">Картой</option>
                        <option value="samsungpay">Samsung pay</option>
                        <option value="applepay">Apple pay</option>
                        <option value="mc">Мобильный телефон</option>
                        <option value="qiwi">Qiwi</option>
                    </select>
                </div>
                <div class="form-group payments card">
                    <form action="https://unitpay.money/pay/354591-b57f7/card">
                        <input type="hidden" name="hideMenu" value="true">
                        <input type="hidden" name="account" value="{{ app.user.id }}">
                        <input type="hidden" name="desc" value="Пополнение счёта">
                        <label>Сумма платежа, руб:*</label>
                        <input type="text" name="sum" value="">
                        <small>Комиссия: 8%</small>
                        <input class="btn mt-4" type="submit" value="Оплатить">
                    </form>
                </div>
                <div class="form-group payments samsungpay">
                    <form action="https://unitpay.money/pay/354591-b57f7/samsungpay">
                        <input type="hidden" name="hideMenu" value="true">
                        <input type="hidden" name="account" value="{{ app.user.id }}">
                        <input type="hidden" name="desc" value="Пополнение счёта">
                        <label>Сумма платежа, руб:*</label>
                        <input type="text" name="sum" value="">
                        <small>Комиссия: 8%</small>
                        <input class="btn mt-4" type="submit" value="Оплатить">
                    </form>
                </div>
                <div class="form-group payments applepay">
                    <form action="https://unitpay.money/pay/354591-b57f7/applepay">
                        <input type="hidden" name="hideMenu" value="true">
                        <input type="hidden" name="account" value="{{ app.user.id }}">
                        <input type="hidden" name="desc" value="Пополнение счёта">
                        <label>Сумма платежа, руб:*</label>
                        <input type="text" name="sum" value="">
                        <small>Комиссия: 8%</small>
                        <input class="btn mt-4" type="submit" value="Оплатить">
                    </form>
                </div>
                <div class="form-group payments mc">
                    <form action="https://unitpay.money/pay/354591-b57f7/mc">
                        <input type="hidden" name="hideMenu" value="true">
                        <input type="hidden" name="account" value="{{ app.user.id }}">
                        <input type="hidden" name="desc" value="Пополнение счёта">
                        <label>Сумма платежа, руб:*</label>
                        <input type="text" name="sum" value="">
                        <small>Комиссия: 0-15%</small>
                        <input class="btn mt-4" type="submit" value="Оплатить">
                    </form>
                </div>
                <div class="form-group payments qiwi">
                    <form action="https://unitpay.money/pay/354591-b57f7/qiwi">
                        <input type="hidden" name="hideMenu" value="true">
                        <input type="hidden" name="account" value="{{ app.user.id }}">
                        <input type="hidden" name="desc" value="Пополнение счёта">
                        <label>Сумма платежа, руб:*</label>
                        <input type="text" name="sum" value="">
                        <small>Комиссия: 9%</small>
                        <input class="btn mt-4" type="submit" value="Оплатить">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--============= Blog Section Ends Here =============-->
{% endblock %}
{% block javascripts %}
    <script>
        $(window).ready(function () {
            $('#PaymentType').change();
        });
        $('#PaymentType').on('change', function () {
            var selectedVal = $('option:selected', $(this)).val();
            $('.payments').hide();
            $('.'+selectedVal).show();
        });
    </script>
{% endblock %}
