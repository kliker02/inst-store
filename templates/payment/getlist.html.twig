{% extends 'base.html.twig' %}
{% block title %}Баланс - Inst-Store{% endblock %}
{% block header %}
    <style>
        .get-button {
            padding: 11px 5px;
        }
    </style>
    <!--============= Header Section Starts Here =============-->
    <header class="header-section inner-header">
        <div class="container">
            <div class="header-wrapper">
                <div class="logo">
                    <a href="{{ path('app_index_index') }}">
                        <img src="{{ asset('/assets/images/logo/logo.png') }}" alt="logo">
                    </a>
                </div>
                {{ include('base/header_list_links.html.twig') }}
                <div class="header-bar d-lg-none">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
    </header>
    <!--============= Header Section Ends Here =============-->

    <section class="page-header bg_img oh" data-background="{{ asset('/assets/images/page-header.png') }}">
        <div class="bottom-shape d-none d-md-block">
            <img src="{{ asset('/assets/css/img/page-header.png') }}" alt="css">
        </div>
        <div class="container">
            <div class="page-header-content cl-white">
                <h2 class="title">Баланс</h2>
                <ul class="breadcrumb">
                    <li>
                        <a href="{{ path('app_index_index') }}">Главная</a>
                    </li>
                    <li>
                        Баланс
                    </li>
                </ul>
            </div>
        </div>
    </section>
    <!--============= Header Section Ends Here =============-->
{% endblock %}
{% block body %}
<!--============= ScrollToTop Section Starts Here =============-->
<div class="preloader">
    <div class="preloader-inner">
        <div class="preloader-icon">
            <span></span>
            <span></span>
        </div>
    </div>
</div>
<a href="#0" class="scrollToTop"><i class="fas fa-angle-up"></i></a>
<div class="overlay"></div>
<!--============= ScrollToTop Section Ends Here =============-->
<!--============= Blog Section Starts Here =============-->
<section class="blog-section padding-top padding-bottom">
    <div class="container">
        <div class="row justify-content-between align-items-center mb-2">
            <a href="{{ path('app_client_deposit') }}" class="button-2">Пополнить баланс</a>
            <p class="text-right">Баланс: <strong>{{ User.BalanceRUB }} руб. </strong></p>
        </div>
        <div class="row justify-content-between">
            <table class="table table-striped">
                <thead>
                <tr>
{#                    <th scope="col">#</th>#}
                    <th scope="col">Описание</th>
{#                    <th scope="col">Тип</th>#}
                    <th scope="col">Статус</th>
                    <th scope="col">RUB</th>
                    <th scope="col">Дата создания</th>
                </tr>
                </thead>
                <tbody>
                {% for row in pagination.items %}
                <tr>
{#                    <th scope="row">{{ loop.index }}</th>#}
                    <td>{{ row.Name }}</td>
{#                    <td>{{ row.getTypeText(row.Type) }}</td>#}
                    <td>{{ row.getStatusText(row.Status) }}</td>
                    <td>{{ row.Total*row.Factor }}</td>
                    <td>{{ row.CreatedDate.format('d.m.Y H:i:s') }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>
<!--============= Blog Section Ends Here =============-->
{% endblock %}
